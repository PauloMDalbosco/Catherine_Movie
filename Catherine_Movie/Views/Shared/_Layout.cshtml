<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - Catherine Movies</title>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")
    <script src="~/Scripts/jquery-3.4.1.min.js"></script>
    <script src="~/Content/FontAwesome/js/fontawesome.js"></script>
    <link href="~/Content/FontAwesome/css/fontawesome.css" rel="stylesheet" />
    <link href="~/Content/FontAwesome/css/all.css" rel="stylesheet" />
</head>
<body>
    <div class="navbar navbar-inverse navbar-fixed-top">
        <div class="container">
            <div class="navbar-header">
                <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                </button>
                @Html.ActionLink("Locações", "Index", "Home", new { area = "" }, new { @class = "navbar-brand" })
                @Html.ActionLink("Filmes", "Index", "Movie", new { area = "" }, new { @class = "navbar-brand" })


            </div>

            <ul class="nav navbar-nav" style="float:right; padding-right: 10px;">
                <li class="nav-item dropdown">
                    <i style="color:white"> - <a id="logOut" class="reset_pass" href="#">SAIR</a></i>
                </li>
            </ul>

            <div class="navbar-collapse collapse">
                <ul class="nav navbar-nav" style="float:right; padding-right: 10px;">
                    <li class="nav-item dropdown">
                        <i id="userLabel" style="color:white"></i>
                    </li>
                </ul>

            </div>
        </div>
    </div>

    <div class="container body-content">
        @RenderBody()
        <hr />
        <footer>
            <p>&copy; @DateTime.Now.Year - Catherine Movies</p>
        </footer>
    </div>

    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    @RenderSection("scripts", required: false)
</body>
</html>

<script>

    // executa funções ao abrir a página
    $(document).ready(function () {

        GetCookie();
    });

     $("#logOut").click(function () {
       window.location.href = "/Login/ClearData";
     });

    // carrega os dados dos usuários do cookie
    function GetCookie() {

        var dateUser = getCookie("UserData");
        var u = dateUser.split('=');
        var stringU = u[1].split('&');
        var name = stringU[0];
        
        // insere o nome do usuário na barra de menu
        $("#userLabel").append(name);
    }

     // le informações guardadas em cookie
    function getCookie(cname) {
        var name = cname + "=";
        var decodedCookie = decodeURIComponent(document.cookie);
        var ca = decodedCookie.split(';');
        for (var i = 0; i < ca.length; i++) {
            var c = ca[i];
            while (c.charAt(0) == ' ') {
                c = c.substring(1);
            }
            if (c.indexOf(name) == 0) {
                return c.substring(name.length, c.length);
            }
        }
        return "";
    }
</script>